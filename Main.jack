// File: Main.jack
class Main {
    function void main() {
        var MemoryGame game;
        var char key;
        let key = 0;
        
        let game = MemoryGame.new();
        
        while (~(key = 81)) {  // Q to quit
            let key = Keyboard.keyPressed();
            do game.handleInput(key);
            do game.draw();
            do Sys.wait(50);
        }
        
        do game.dispose();
        return;
    }
}